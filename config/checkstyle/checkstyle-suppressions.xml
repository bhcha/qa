<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- 테스트 파일은 일부 규칙 완화 -->
    <suppress files=".*Test\.java$" checks="MagicNumber"/>
    <suppress files=".*Test\.java$" checks="MethodLength"/>
    <suppress files=".*Test\.java$" checks="ClassDataAbstractionCoupling"/>
    <suppress files=".*Test\.java$" checks="ClassFanOutComplexity"/>
    
    <!-- DTO 클래스는 일부 규칙 완화 -->
    <suppress files=".*[Dd]to\.java$" checks="VisibilityModifier"/>
    <suppress files=".*[Rr]esponse\.java$" checks="VisibilityModifier"/>
    <suppress files=".*[Rr]equest\.java$" checks="VisibilityModifier"/>
    
    <!-- 설정 클래스는 일부 규칙 완화 -->
    <suppress files=".*Config\.java$" checks="HideUtilityClassConstructor"/>
    <suppress files=".*Configuration\.java$" checks="HideUtilityClassConstructor"/>
    
    <!-- Generated 코드 제외 -->
    <suppress files=".*[Bb]uilder\.java$" checks=".*"/>
    
    <!-- Spring Boot 애플리케이션 클래스 -->
    <suppress files=".*Application\.java$" checks="HideUtilityClassConstructor"/>
    
    <!-- 도메인 이벤트 클래스 -->
    <suppress files=".*Event\.java$" checks="VisibilityModifier"/>
    
    <!-- 값 객체 클래스 -->
    <suppress files=".*[Vv]alue[Oo]bject\.java$" checks="VisibilityModifier"/>
    
    <!-- 엔티티 클래스 -->
    <suppress files=".*Entity\.java$" checks="VisibilityModifier"/>
    
    <!-- 예외 클래스 -->
    <suppress files=".*Exception\.java$" checks=".*"/>
    
</suppressions>